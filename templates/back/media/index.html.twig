{% extends 'baseBack.html.twig' %}

{% block body %}
    <div class="container">
    <h1>Media Table</h1>

    <table class="table">
        <thead>
            <tr>
                
                <th>Path</th>
                <th>Product </th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for medium in media %}
            <tr>
               
                <td>
                                        <img src="{{ asset('uploads/product_images/'~ medium.path) }}" alt="" width="75"
                                        >
                                        </td>
                                        {% if medium.product == null  %}
                                        <td>! ! Not affected to any product ! !</td>
                                            {% else %}
                                                            <td>{{ medium.product.name}}</td>

                                        {% endif %}
                <td>
                    <a class="btn btn-danger "href="{{ path('app_media_delete', {'id': medium.id}) }}">Delete</a>
           
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_media_new') }}"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
  <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
  <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
</svg></a>
    </div>
{% endblock %}
