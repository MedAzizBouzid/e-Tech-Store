{% extends 'baseFront.html.twig' %}

{% block body %}


        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    
                    <div class="col-lg-7">
                        <div class="p-5">
                                 <h1>Edit Your Password</h1>
                             <div class="card-body">
                                 {% for message in app.flashes('warning') %}
                                          <div class="alert alert-warning">
                                             {{message}}
                                          </div>
     
                                {% endfor %}
                                {{ form_errors(form) }}
                                    {{ form_start(form) }}
                                    {{ form_row(form.plainPassword, {'attr': {'class': 'form-control form-control-user'}}) }}
                                    {{ form_row(form.newPassword, {'attr': {'class': 'form-control form-control-user'}}) }}
      

                                          <button type="submit" class="btn btn-primary btn-user btn-block">Update </button>
                                  {{ form_rest(form) }}
      
    
                              </div>
                         </div>
                   </div>
            </div>
            
        


    
{% endblock %}
